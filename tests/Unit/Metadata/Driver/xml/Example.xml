<?xml version="1.0" encoding="UTF-8" ?>
<content-type-mapping
    xmlns="http://github.com/psiphp/content-type/mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://github.com/psiphp/content-type
    https://github.com/psiphp/content-type/raw/master/schema/mapping.xsd"
    >

    <class
        name="Psi\Component\ContentType\Tests\Unit\Metadata\Driver\Model\Example"
        >

        <field name="fieldOne" type="markdown" role="title" group="group_one">

            <shared-options>
                <option name="option_one">Foobar</option>
                <option name="option_two">Barfoo</option>
                <option name="option_three" type="collection">
                    <option name="sub_one">One</option>
                    <option name="sub_two">Two</option>
                </option>
            </shared-options>

            <form-options>
                <option name="a">A</option>
                <option name="b">B</option>
            </form-options>

            <view-options>
                <option name="c">C</option>
            </view-options>

            <storage-options>
                <option name="d">D</option>
            </storage-options>

        </field>

        <field name="fieldTwo" type="date">
            <shared-options>
                <option name="option_one">Foobar</option>
                <option name="option_two">Barfoo</option>
            </shared-options>
        </field>

    </class>

</content-type-mapping>
